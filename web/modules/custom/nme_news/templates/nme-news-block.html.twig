{#
/**
 * @file
 * Template for NME News Block.
 */
#}
<div{{ attributes.addClass('nme-news-block') }}>
  <div class="text-center mb-8">
    <h2 class="text-4xl font-bold text-gray-900 mb-4">{{ title }}</h2>
    <div class="w-24 h-1 bg-red-600 mx-auto"></div>
  </div>
  
  {% if articles %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {% for article in articles %}
        {{ article }}
      {% endfor %}
    </div>
  {% else %}
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No news articles available at the moment.</p>
    </div>
  {% endif %}
</div>